{
        "manifest_version": 2,
        "name": "Momentum clone",
        "short_name": "Momentum",
        "version": "0.0.5",
        "description": "Replace new tab page with a personal dashboard featuring to-do, weather, and inspiration quote.",
        "icons": {
            "16": "icons/icon_16.png",
            "128": "icons/icon_128.png"
        },
        "background": {
            "scripts": [
                "eventpage.js"
            ],
            "persistent": false
        },
        "chrome_url_overrides": {
            "newtab": "index.html"
        },
        "offline_enabled": true,
        "browser_action": {
            "default_title": "Momentum"
        },
        "permissions": [
            "geolocation",
            "unlimitedStorage"
        ],
        "web_accessible_resources": [
            "temp/scripts/*.js",
            "temp/styles/*.css"
        ],
        "content_security_policy": "script-src 'self' https://api.darksky.net/forecast/; object-src 'self'",
        "optional_permissions": [
            "bookmarks",
            "topSites",
            "chrome://favicon/"
        ]
    }